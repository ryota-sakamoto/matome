GET     /                           controllers.HomeController.index
GET     /settings                   controllers.SettingController.index
GET     /settings/blogs             controllers.SettingController.blogList
POST    /settings/blogs             controllers.SettingController.updateBlogList
GET     /login                      controllers.LoginController.index
POST    /login                      controllers.LoginController.login
GET     /logout                     controllers.LoginController.logout
POST    /register                   controllers.RegisterController.register
GET     /$id<[0-9a-zA-Z_]+>         controllers.UserController.show(id: String)

GET     /api/v1/articles            controllers.ApiController.getArticle
POST    /api/v1/aggregate           controllers.CronController.aggregateArticle

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
